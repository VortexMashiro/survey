<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:text="Question2"
        android:textColor="@color/black"
        android:textSize="28sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:text="How much does your phone cost?"
        android:textSize="23sp" />

    <RadioGroup
        android:layout_width="350dp"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rdo_price_1000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Under 1000"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rdo_price_1999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="1000-1999"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rdo_price_2999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="2000-2999"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rdo_price_3999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="3000-3999"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rdo_price_4000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="More than 4000"
            android:textSize="20sp" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_Next_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@color/colorAccent"
        android:onClick="btn_Next_ClickEvent"
        android:text="Next" />
    <!-- END    : Your code should be within this block -->

</LinearLayout>
