<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  Start : Your code should be within this block -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="WELCOME TO"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="TAKE PART IN OUR SURVEY!"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Before we start,here are things you should know:"
            android:textAlignment="viewStart"
            android:textSize="23sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="-Please be honest when making your choice."
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="-We are just doing a research so you dont't have to fake your information."
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="-Please follow the step we designed for you and dont skip any questions."
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <CheckBox
            android:id="@+id/checkbox_request"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="I accept these requests."
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:onClick="btn_Next_ClickEvent"
            android:text="LET'S START!" />

    </LinearLayout>


    <!-- END    : Your code should be within this block -->
</RelativeLayout>